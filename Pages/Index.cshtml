@page
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather On Mars</title>
    <style>
        body {
            background: url('/images/BF75C159-5472-46EF-ADE5-CE37A3585349.jpeg') no-repeat center center fixed;
            background-size: cover;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .weather-container {
            text-align: center;
            background: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
        }

            .weather-container h1 {
                font-size: 50px;
                margin: 0;
            }

            .weather-container p {
                font-size: 30px;
                margin: 10px 0 0 0;
            }
    </style>
</head>
<body>
    <div class="weather-container">
        <h1>Weather On Mars</h1>
        <p id="weather">Loading...</p>
    </div>

    <script>
        async function getMarsWeather() {
            const response = await fetch('https://api.maas2.apollorion.com/');
            const data = await response.json();
            document.getElementById('weather').textContent = `Temperature: ${data.temperature?.fahrenheit} °F`;
        }

        getMarsWeather();
    </script>
</body>
</html>
